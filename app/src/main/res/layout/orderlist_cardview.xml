<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="horizontal"
    android:padding="@dimen/cardview_default_radius">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp"
        app:cardUseCompatPadding="true">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="250dp"
             android:text="Order Price"
             android:textColor="@color/black"
             android:textSize="25dp"
             android:id="@+id/orderlistorderprice"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="60dp"
             android:layout_marginLeft="250dp"
             android:text="Additional"
             android:textColor="@color/black"
             android:textSize="25dp"
             android:id="@+id/orderlistadditionalprice"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:text="Algene"
             android:textColor="@color/black"
             android:textSize="15dp"
             android:id="@+id/oderlist_Name"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="30dp"
             android:text="Xiaomi RedmiNote 8"
             android:textColor="@color/black"
             android:textSize="15dp"
             android:id="@+id/oderlistorderName"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="50dp"
             android:text="Tglass"
             android:textColor="@color/black"
             android:textSize="15dp"
             android:id="@+id/orderlistadditional"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="70dp"
             android:text="Date book"
             android:textColor="@color/black"
             android:textSize="15dp"
             android:id="@+id/orderlistdatebook"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:text="Color"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:id="@+id/orderlistcolor"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:text="Add Check"
            android:textColor="@color/black"
            android:id="@+id/orderlistchkboxadd"/>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="130dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/red1"
            android:id="@+id/orderlistcancel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Cancel"
                    android:textColor="#fff"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>