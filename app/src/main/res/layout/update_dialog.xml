<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btndialogupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="150dp"
        android:background="@color/red2"
        android:textColor="#ffff"/>
    <Button
        android:id="@+id/btndialogclear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginTop="200dp"
        android:background="@color/red2"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/btndialogupdatecancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="250dp"
        android:background="@color/red2"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/btndialogpayment"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Add"
        android:background="@color/red2"
        android:textColor="#ffff"
        android:maxLength="6"/>
    <Button
        android:id="@+id/btndialogsukli"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="sukli"
        android:background="@color/red2"
        android:textColor="#ffff"
        android:maxLength="6"/>
    <Button
        android:id="@+id/btndialogkulang"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="kulang"
        android:background="@color/red2"
        android:textColor="#ffff"
        android:maxLength="6"/>

    <EditText
        android:id="@+id/dialogpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:textSize="30dp"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="190dp"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:hint="Insert Pay"
        android:textDirection="rtl"/>

    <TextView
        android:id="@+id/textViewKulang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kulang  "
        android:layout_marginLeft="110dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/forwar1"/>

    <TextView
        android:id="@+id/textViewSukli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advance        "
        android:layout_marginLeft="110dp"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"
        android:drawableRight="@drawable/forwar1"/>

    <TextView
        android:id="@+id/textViewpayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:layout_marginLeft="110dp"
        android:textColor="@color/black"
        android:layout_marginTop="120dp"
        android:drawableRight="@drawable/forwar1"/>



</RelativeLayout>